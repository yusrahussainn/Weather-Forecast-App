<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0000FF"/> <!-- Blue color when pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1E90FF"/> <!-- Blue color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
